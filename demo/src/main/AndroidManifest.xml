<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.blundell.adc">

  <application>
    <uses-library
      android:name="com.google.android.things"
      android:required="false" />

    <activity android:name="com.blundell.demo.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.IOT_LAUNCHER" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
    <activity
      android:name="com.blundell.demo.ReaderActivity"
      android:label="Read Channel" />
    <activity
      android:name="com.blundell.demo.ComparatorActivity"
      android:label="Compare Channel" />
  </application>

</manifest>
